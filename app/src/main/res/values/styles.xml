    <style name="buttonHexaCut" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerFamily">cut</item>

        <item name="cornerSize">15dp</item>
        <item name="borderWidth">0dp</item>


    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSize">50%</item>

    </style>
