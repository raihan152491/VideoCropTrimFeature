    </style>
    <style name="bottomSheetRoundAll" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerFamily">rounded</item>



        <item name="cornerSize">20dp</item>


        <item name="borderWidth">0dp</item>


    </style>

    <style name="bottomSheetRound" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>


        <item name="cornerSizeTopLeft">27dp</item>
        <item name="cornerSizeTopRight">27dp</item>
        <item name="cornerSize">0dp</item>

        <item name="borderWidth">0dp</item>


    </style>
    <style name="Dialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">

        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/addClientDialogAnimation</item>
        <item name="android:backgroundDimAmount">0.5</item>

        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="android:windowTranslucentStatus" >true</item>


    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="AlertDialogTheme2" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="addClientDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="filterDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>
    <style name="SlideInSlideOut">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="SlideDownSlideOp">
        <item name="android:windowEnterAnimation">@anim/slide_down</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>
    <style name="navigationTheme">

        <item name="colorPrimary">?attr/navBarBkHlt</item>
        <item name="colorControlHighlight">?attr/navBarBkHlt</item>



    </style>


    <style name="DialogFullscreen" >

        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/SlideDownSlideOp</item>
        <item name="android:backgroundDimAmount">0.5</item>

        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>



        <item name="android:windowTranslucentStatus" >true</item>


    </style>
    <style name="bottomNavigationTheme">


        <item name="colorControlHighlight">?attr/btmBarBkHlt</item>



    </style>
